{
  "name": "metricating-api",
  "version": "1.0.0",
  "description": "A system that collects issue tracker data for metric visualization.",
  "main": "app/index.js",
  "repository": "https://github.com/piperamirez/metricating-api",
  "scripts": {
    "test": "jest --watch",
    "build": "babel --presets es2015 -d dist/ app",
    "start": "npm run build && node dist/index.js",
    "test-ci": "jest --coverage --testPathIgnorePatterns .*\\.spike\\.*.",
    "ğŸ‘Œ": "npm run test-ci && npx eslint app"
